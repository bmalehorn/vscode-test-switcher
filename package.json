{
  "name": "test-switcher",
  "displayName": "Test Switcher",
  "description": "Toggle between editing a file and its unit test, in any framework",
  "version": "1.0.0",
  "publisher": "bmalehorn",
  "engines": {
    "vscode": "^1.36.0"
  },
  "repository": {
    "url": "https://github.com/bmalehorn/vscode-test-switcher"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/test-switcher.png",
  "activationEvents": [
    "onCommand:test-switcher.switch"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Test Switcher",
      "properties": {
        "test-switcher.rules": {
          "type": "array",
          "description": "Additional {pattern, replacement} rules - see extension description",
          "default": []
        }
      }
    },
    "commands": [
      {
        "command": "test-switcher.switch",
        "title": "Test Switcher: Switch"
      }
    ],
    "keybindings": [
      {
        "command": "test-switcher.switch",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4",
    "vscode": "^1.1.25"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
